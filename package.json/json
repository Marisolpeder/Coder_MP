{
  "name": "coder-mp",
  "version": "1.0.0",
  "description": "Sitio web de Coder MP",
  "scripts": {
    "scss": "sass --watch css/scss/main.scss:css/style.css --style expanded --source-map",
    "scss:build": "sass css/scss/main.scss:css/style.css --style compressed --no-source-map",
    "prefix": "postcss css/style.css --use autoprefixer -o css/style.prefixed.css",
    "minify": "postcss css/style.prefixed.css --use cssnano -o css/style.min.css",
    "purge": "purgecss --css css/style.min.css --content '**/*.html' '**/*.js' --output css/",
    "build": "npm-run-all scss:build prefix minify",
    "dev": "npm-run-all --parallel scss",
    "start": "browser-sync start --server --files '**/*.css' '**/*.html' '**/*.js' --no-notify"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "browser-sync": "^2.29.0"
  }
}